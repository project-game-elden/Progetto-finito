                    while player_life > 0 and boss_life > 0: #un loop infinito, che finira con la tua morte
                        print("I tuoi hp:", player_life)
                        print("Boss hp:", boss_life)
                        boss_hit = random.randint(0, 250)                
                        boss_life -= Pdamage
                        player_life -= boss_hit
                        print("Infliggi " + str(Pdamage) + " danni al Boss!")
                        print("Subisci " + str(boss_hit) + " danni!")
                    if boss_life <= 0:
                            print("E' impossibile >:<") #Nel gioco, il primo boss ti deve uccidere o ti uccidi per andare avanti...
